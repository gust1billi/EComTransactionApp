<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/silver"
    android:layout_gravity="bottom">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn1"
            android:text="1" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button
            android:id="@+id/btn2"
            android:text="2" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button
            android:id="@+id/btn3"
            android:text="3" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp"/>

        <Button
            android:id="@+id/btn4"
            android:text="4" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button android:id="@+id/btn5"
            android:text="5" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button android:id="@+id/btn6"
            android:text="6" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp"/>

        <Button
            android:id="@+id/btn7"
            android:text="7" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button android:id="@+id/btn8"
            android:text="8" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button android:id="@+id/btn9"
            android:text="9" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp" />

        <Button android:id="@+id/btnC"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="C" android:textColor="@color/warning_red"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp"/>

        <Button android:id="@+id/btn0"
            android:text="0" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp"/>

        <Button android:id="@+id/btn000"
            android:text="000" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_white"
            android:layout_margin="@dimen/margin_5dp"/>

        <Button android:id="@+id/btnDone"
            android:visibility="gone"
            android:text="Done" android:textColor="@color/white"
            android:background="@drawable/rounded_corner_teal"
            android:layout_margin="@dimen/margin_5dp"/>

        <ImageButton
            android:id="@+id/btnClear" android:src="@drawable/ic_baseline_backspace_24"
            android:background="@drawable/rounded_corner_navy"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_columnSpan="3"
            android:layout_height="50dp"
            android:layout_gravity="fill"
            app:tint="@color/white" />

    </GridLayout>

</LinearLayout>